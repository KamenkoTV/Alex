<UserControl
    x:Class="Alex.GuiDebugger.Views.Tools.ElementTreeToolView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Alex.GuiDebugger.Models"
    xmlns:tools="clr-namespace:Alex.GuiDebugger.ViewModels.Tools"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    
    <Design.DataContext>
        <tools:ElementTreeToolViewModel />
    </Design.DataContext>
    
    <Grid Focusable="True" RowDefinitions="Auto,*">
        <Button Name="RefreshButton" Grid.Row="0" Content="Refresh" />

        <TreeView
            Name="TreeView"
            Grid.Row="1"
            VerticalAlignment="Stretch"
            Items="{Binding ElementTreeItems}"
            SelectionMode="Single">
            <TreeView.DataTemplates>
                <TreeDataTemplate DataType="models:ElementTreeItem" ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding ElementType}" />
                        <TextBlock Text="[" />
                        <TextBlock Text="{Binding Children.Length}" />
                        <TextBlock Text="]" />
                    </StackPanel>
                </TreeDataTemplate>
            </TreeView.DataTemplates>

        </TreeView>
    </Grid>

</UserControl>
