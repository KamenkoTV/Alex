<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Alex.GuiDebugger.ViewModels"
        xmlns:views="clr-namespace:Alex.GuiDebugger.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Alex.GuiDebugger.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="GuiDebugger">

    <Design.DataContext>
        <viewModels:MainWindowViewModel/>
    </Design.DataContext>

    <Grid Background="Transparent" RowDefinitions="Auto,Auto,*,25">

      <Menu Grid.Row="0">
        
      </Menu>
        
        <views:MainView Grid.Row="2" DataContext="{Binding MainViewModel}" />
        
      <TextBlock
          Grid.Row="3"
          Margin="4"
          Text="{Binding Layout.FocusedView}" />
      
    </Grid>

</Window>
